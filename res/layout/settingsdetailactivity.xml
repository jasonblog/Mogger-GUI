<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_below="@+id/textView2" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture Name"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView" android:layout_alignParentLeft="true" android:layout_marginTop="18dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gesture Detail"
                android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture Threshold"
                android:id="@+id/textView3"
                android:layout_marginTop="18dp" android:layout_below="@+id/editText" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sound:"
                android:id="@+id/textView4"
                android:layout_marginTop="18dp" android:layout_below="@+id/seekBar" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="neconeco.mp3"
                android:id="@+id/textView5" android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
        <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/folder"
                android:layout_alignBottom="@+id/textView5" android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture"
                android:id="@+id/textView6"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/imageButton" android:layout_alignParentLeft="true"/>
        <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton2"
                android:background="@null"
                android:src="@drawable/add"
                android:layout_alignTop="@+id/textView6" android:layout_alignLeft="@+id/imageButton"/>
        <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton4"
                android:background="@null"
                android:src="@drawable/remove" android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/imageButton2"/>
        <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton5"
                android:background="@null"
                android:src="@drawable/save" android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="OK"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"/>
</RelativeLayout>